{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "amd",
    "outFile": "brickyeditor.js",
    "removeComments": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": "src/tsc",
    "paths": {
      "@/*": ["*"] // resolve all modules prefixed with `@/` from `src` directory
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "typeRoots": ["types"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
