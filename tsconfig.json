{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "amd",
    "lib": ["dom", "es2017"],
    "outFile": "brickyeditor.js",
    "removeComments": true,
    "declaration": false,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "src/*": ["src/tsc/*"]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "typeRoots": ["types"]
}
